<h1>Game</h1>

<% if @game.lives_remaining < 1 %>
  <p>GAME OVER</p>
  <p>Your word was... <%= @game.word %></p>
  <p>Play again?</p>
  <%= link_to 'New Game', new_game_path %>
<% elsif @game.won? %>
  <%= @game.word %>
  <p>YOU WIN!</p>
  <p>Play again?</p>
  <%= link_to 'New Game', new_game_path %>
<% else %>
  <%= render 'active_game' %>
<% end %>
  